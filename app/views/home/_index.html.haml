.span6.offset3
  = bootstrap_flash
  .hero-unit.center
    .row{ style: 'padding-bottom: 30px'}
      %h2 Welcome to the authentificator
    .row
      .btn-group
        - if current_user
          = link_to('Log out', log_out_path, class: 'btn btn-danger btn-large', remote: true)
        - else
          = link_to('Log in', log_in_path, class: 'btn btn-primary btn-large', remote: true)
          = link_to('Sign up', sign_up_path, class: 'btn btn-primary btn-large', remote: true)